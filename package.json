{
  "name": "meetalva",
  "version": "0.7.0",
  "description": "Alva is a radically new design tool that enables cross-functional teams to design digital products.",
  "main": "./build/electron/main.js",
  "scripts": {
    "build": "npm run lint && tsc --project .",
    "build:clean": "npm run clean && npm run build",
    "build:electron": "electron-builder -mwl && node ./scripts/dist-postprocess.js",
    "clean": "rm -rf build && rm -rf dist",
    "commit": "commit",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "dist": "node ./scripts/dist-preprocess.js",
    "docs": "typedoc src",
    "lint": "tslint --project . -c tslint.json 'src/**/*.ts'",
    "start": "npm run build && electron build/electron/main.js --remote-debugging-port=9222 --inspect=9223",
    "start:clean": "npm run clean && npm run start",
    "precommit": "lint-staged",
    "watch": "npm run build && concurrently \"electron build/electron/main.js --remote-debugging-port=9222 --inspect=9223\" \"tsc --project . --watch\"",
    "watch:clean": "npm run clean && npm run watch",
    "watch:tests": "jest --watch",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/meetalva/alva.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/meetalva/alva/issues"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "tslint -c tsconfig.json --fix",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "useTabs": true,
    "tabWidth": 3,
    "singleQuote": true
  },
  "build": {
    "appId": "io.github.meetalva",
    "productName": "Alva",
    "copyright": "Copyright (c) 2017-2018 SinnerSchrader Deutschland GmbH",
    "files": [
      "build/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "src/resources",
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.graphics-design"
    },
    "nsis": {
      "artifactName": "${productName}-${version}.${ext}",
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "artifactName": "${productName}-${version}.${ext}",
      "executableName": "Alva"
    },
    "fileAssociations": {
      "ext": "alva",
      "name": "Alva",
      "icon": "document.icns",
      "role": "Editor",
      "isPackage": true
    }
  },
  "standard-version": {
    "scripts": {
      "prebump": "rm -f package-lock.json"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "6.2.0",
    "@commitlint/config-conventional": "6.1.3",
    "@commitlint/prompt-cli": "6.1.3",
    "@commitlint/travis-cli": "6.2.0",
    "@patternplate/cli": "2.5.25",
    "@patternplate/render-styled-components": "2.5.18",
    "@types/chokidar": "1.7.5",
    "@types/color": "3.0.0",
    "@types/deep-assign": "0.1.1",
    "@types/electron-devtools-installer": "2.2.0",
    "@types/electron-is-dev": "0.3.0",
    "@types/electron-store": "1.3.0",
    "@types/express": "4.16.0",
    "@types/fs-extra": "5.0.4",
    "@types/get-port": "3.2.0",
    "@types/isomorphic-fetch": "0.0.34",
    "@types/jest": "22.2.3",
    "@types/js-yaml": "3.11.2",
    "@types/lodash": "4.14.116",
    "@types/memory-fs": "0.3.1",
    "@types/micromatch": "3.1.0",
    "@types/mime-types": "2.1.0",
    "@types/mock-fs": "3.6.30",
    "@types/node": "9.6.28",
    "@types/object-path": "0.9.29",
    "@types/react": "16.4.11",
    "@types/react-dom": "16.0.7",
    "@types/react-helmet": "5.0.7",
    "@types/read-pkg": "3.0.0",
    "@types/readdir-enhanced": "2.2.0",
    "@types/smoothscroll-polyfill": "0.3.0",
    "@types/tempy": "0.1.0",
    "@types/username": "3.0.0",
    "@types/uuid": "3.4.3",
    "@types/webpack": "4.4.10",
    "@types/webpack-dev-middleware": "2.0.2",
    "@types/ws": "5.1.2",
    "concurrently": "3.6.1",
    "devtron": "1.4.0",
    "electron": "2.0.7",
    "electron-builder": "20.28.2",
    "electron-devtools-installer": "2.2.4",
    "fixturez": "1.1.0",
    "husky": "0.14.3",
    "isomorphic-fetch": "2.2.1",
    "jest": "22.4.4",
    "jest-util": "22.4.3",
    "lint-staged": "7.2.2",
    "mobx-react-devtools": "4.2.15",
    "mock-fs": "4.6.0",
    "prettier": "1.14.2",
    "standard-version": "4.4.0",
    "tempy": "0.2.1",
    "ts-jest": "22.4.6",
    "tslint": "5.11.0",
    "typedoc": "0.12.0",
    "typescript-styled-plugin": "0.10.0"
  },
  "dependencies": {
    "@brainly/html-sketchapp": "3.3.1",
    "@marionebl/react-docgen-typescript": "1.6.0-1",
    "@patternplate/load-config": "2.5.18",
    "@patternplate/load-meta": "2.5.18",
    "@types/loader-utils": "1.1.3",
    "chokidar": "2.0.4",
    "cli": "1.0.1",
    "color": "3.0.0",
    "common-dir": "2.0.2",
    "commondir": "1.0.1",
    "deep-assign": "2.0.0",
    "electron-is-dev": "0.3.0",
    "electron-log": "2.2.17",
    "electron-store": "2.0.0",
    "electron-updater": "2.23.3",
    "express": "4.16.3",
    "fs-extra": "6.0.1",
    "fuse.js": "3.2.1",
    "get-port": "3.2.0",
    "glob-parent": "3.1.0",
    "js-string-escape": "1.0.1",
    "js-yaml": "3.12.0",
    "loader-utils": "1.1.0",
    "lodash": "4.17.10",
    "memory-fs": "0.4.1",
    "micromatch": "3.1.10",
    "mime-types": "2.1.19",
    "mobx": "3.6.2",
    "mobx-react": "4.4.3",
    "object-path": "0.11.4",
    "query-string": "6.1.0",
    "re-resizable": "4.7.1",
    "react": "16.4.2",
    "react-docgen": "2.21.0",
    "react-docgen-typescript": "1.7.0",
    "react-dom": "16.4.2",
    "react-feather": "1.1.1",
    "react-helmet": "5.2.0",
    "react-router": "4.3.1",
    "react-select": "2.0.0",
    "read-pkg": "3.0.0",
    "readdir-enhanced": "2.2.1",
    "readts": "0.2.0",
    "smoothscroll-polyfill": "0.4.3",
    "styled-components": "3.4.4",
    "tslib": "1.9.3",
    "typescript": "2.9.2",
    "url-search-params": "0.10.2",
    "username": "3.0.0",
    "uuid": "3.3.2",
    "webpack": "4.17.0",
    "ws": "5.2.2"
  },
  "homepage": "https://meetalva.github.io/"
}
