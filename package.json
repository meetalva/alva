{
	"name": "stacked-app",
	"version": "0.1.0",
	"description": "",
	"main": "dist/electron/index.js",
	"scripts": {
		"prebuild": "tslint --project . -c tslint.json 'src/**/*.ts'",
		"build": "tsc --project .",
		"start": "electron dist/electron",
		"watch": "tsc --project . --watch",
		"prewatch-start": "npm run build && npm run start",
		"watch-start": "tsc --project . --watch",
		"start-lsg":
			"npm run build-lsg && concurrently 'npm run build-lsg -- -w' 'patternplate start'",
		"build-lsg": "tsc --project src/lsg --outDir dist/lsg/patterns --sourceMap"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/stackedapp/stacked.git"
	},
	"author": "",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/stackedapp/stacked/issues"
	},
	"prettier": {
		"printWidth": 100,
		"useTabs": true,
		"tabWidth": 3,
		"singleQuote": true
	},
	"devDependencies": {
		"@patternplate/cli": "^2.0.0-4",
		"@patternplate/render-styled-components": "^2.0.0-3",
		"@types/electron-devtools-installer": "^2.0.2",
		"@types/node": "^8.0.53",
		"@types/react": "^16.0.0",
		"@types/react-dom": "^16.0.3",
		"concurrently": "^3.5.1",
		"electron-devtools-installer": "^2.2.1",
		"mobx-react-devtools": "^4.2.15",
		"ts-config": "^15.0.0",
		"tslib": "^1.8.0",
		"tslint": "^5.8.0",
		"typescript": "^2.6.2"
	},
	"dependencies": {
		"cli": "^1.0.1",
		"electron": "^1.7.9",
		"mobx": "^3.3.2",
		"mobx-react": "^4.3.5",
		"react": "^16.0.0",
		"react-dom": "^16.0.0",
		"react-router": "^4.2.0",
		"readts": "^0.1.0",
		"styled-components": "^2.2.3",
		"systemjs": "^0.20.19"
	},
	"homepage": "https://github.com/stackedapp/stacked#readme"
}
