{
  "name": "@meetalva/core",
  "version": "0.8.1",
  "description": "Create living prototypes with code components",
  "main": "./build/bin/electron.js",
  "bin": {
    "alva": "./bin/alva.js"
  },
  "scripts": {
    "alva": "node bin/alva",
    "compile": "tsc --project .",
    "bundle": "webpack --production",
    "build:clean": "npm run clean && npm run build",
    "build:electron": "electron-builder",
    "clean": "rm -rf build && rm -rf dist",
    "lint": "tslint --project . -c tslint.json 'src/**/*.ts'",
    "release": "electron-builder --publish always",
    "static": "node build/bin/alva --out=.static --host=static",
    "test": "jest --maxWorkers 4",
    "watch": "concurrently \"tsc --project . --watch\" \"webpack -w\"",
    "watch:tests": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/meetalva/alva.git"
  },
  "author": {
    "email": "hey@meetalva.io",
    "name": "Meet Alva Team",
    "url": "https://meetalva.io/"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/meetalva/alva/issues"
  },
  "build": {
    "compression": "store",
    "appId": "io.github.meetalva",
    "npmRebuild": false,
    "productName": "Alva",
    "copyright": "Copyright (c) 2017-2018 SinnerSchrader Deutschland GmbH",
    "files": [
      "build/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "src/resources",
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.graphics-design",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "nsis": {
      "artifactName": "${productName}-${version}.${ext}",
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "artifactName": "${productName}-${version}.${ext}",
      "executableName": "Alva",
      "target": [
        "appimage",
        "snap",
        "deb"
      ]
    },
    "fileAssociations": {
      "ext": "alva",
      "name": "Alva",
      "icon": "document.icns",
      "role": "Editor",
      "isPackage": true
    }
  },
  "standard-version": {
    "scripts": {
      "prebump": "rm -f package-lock.json"
    }
  },
  "devDependencies": {
    "@patternplate/cli": "2.5.25",
    "@patternplate/render-styled-components": "2.5.18",
    "@types/jest": "22.2.2",
    "concurrently": "3.5.1",
    "css-loader": "1.0.0",
    "electron": "^4.0.0",
    "electron-builder": "^20.38.4",
    "fixturez": "1.1.0",
    "jest": "^23.6.0",
    "jest-dom": "^3.0.0",
    "jest-util": "^23.4.0",
    "mobx-react-devtools": "6.0.3",
    "monaco-editor-webpack-plugin": "1.4.0",
    "prettier": "1.12.0",
    "react-testing-library": "5.4.0",
    "style-loader": "0.21.0",
    "ts-jest": "^23.10.5",
    "ts-loader": "4.4.1",
    "tslint": "5.11.0",
    "tslint-config-prettier": "1.15.0",
    "webpack-cli": "3.1.0"
  },
  "dependencies": {
    "@marionebl/browserfs": "2.0.0",
    "@marionebl/sander": "0.6.1",
    "@types/color": "^3.0.0",
    "@types/dargs": "5.1.0",
    "@types/electron-devtools-installer": "2.0.3",
    "@types/electron-is-dev": "0.3.0",
    "@types/execa": "0.9.0",
    "@types/express": "4.11.1",
    "@types/feather-icons": "4.7.0",
    "@types/fs-extra": "5.0.2",
    "@types/get-port": "3.2.0",
    "@types/isomorphic-fetch": "0.0.34",
    "@types/js-yaml": "3.11.1",
    "@types/json5": "0.0.30",
    "@types/loader-utils": "1.1.3",
    "@types/lodash": "4.14.107",
    "@types/memory-fs": "0.3.0",
    "@types/micromatch": "3.1.0",
    "@types/mime-types": "2.1.0",
    "@types/mock-fs": "3.6.30",
    "@types/node": "^10.12.18",
    "@types/node-fetch": "2.1.1",
    "@types/object-path": "0.9.29",
    "@types/opn": "5.1.0",
    "@types/react": "16.4.11",
    "@types/react-dom": "16.0.7",
    "@types/react-helmet": "5.0.6",
    "@types/react-loadable": "5.4.2",
    "@types/react-textarea-autosize": "4.3.3",
