    "@types/styled-components": "4.0.3",
    "@types/tempy": "0.1.0",
    "@types/username": "3.0.0",
    "@types/uuid": "3.4.3",
    "@types/webpack": "^4.4.21",
    "@types/ws": "5.1.0",
    "clear-module": "2.1.0",
    "color": "3.0.0",
    "commondir": "1.0.1",
    "dargs": "6.0.0",
    "devtron": "1.4.0",
    "electron-devtools-installer": "2.2.4",
