    "react-feather": "^1.1.5",
    "react-helmet": "5.2.0",
    "react-loadable": "5.5.0",
    "react-monaco-editor": "0.22.0",
    "react-outside-click-handler": "1.2.0",
    "react-select": "2.0.0-beta.6",
    "react-textarea-autosize": "7.0.4",
    "read-pkg": "3.0.0",
    "request-idle-callback": "1.0.2",
    "resolve": "1.8.1",
    "serve-handler": "5.0.7",
    "styled-components": "4.0.3",
    "tag-hoc": "1.0.0",
    "throat": "^4.1.0",
    "ts-simple-ast": "20.0.0",
    "tslib": "1.9.0",
    "typescript": "3.2.2",
    "typescript-eslint-parser": "^21.0.2",
    "url-search-params": "0.10.0",
    "util.promisify": "1.0.0",
    "uuid": "3.2.1",
    "webpack": "^4.28.2",
    "ws": "5.1.1",
    "yargs-parser": "10.1.0"
  },
  "homepage": "https://meetalva.github.io/"
}
