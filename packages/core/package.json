    "import-fresh": "2.0.0",
    "isomorphic-fetch": "2.2.1",
    "js-yaml": "3.11.0",
    "json5": "2.1.0",
    "loader-utils": "1.1.0",
    "lodash": "4.17.5",
    "md5": "2.2.1",
    "memory-fs": "0.4.1",
    "mime-types": "2.1.18",
    "mobile-drag-drop": "2.3.0-rc.1",
    "mobx": "5.0.3",
    "mobx-react": "5.2.3",
    "mobx-utils": "5.1.0",
